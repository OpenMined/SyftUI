{
  "$schema": "https://schema.tauri.app/config/2.4.1",
  "productName": "SyftBox",
  "version": "0.1.0",
  "identifier": "org.openmined.syftui",
  "build": {
    "frontendDist": "../src-frontend/out",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; img-src *; script-src 'self' 'unsafe-inline';"
    },
    "windows": [
      {
        "label": "main",
        "title": "SyftBox",
        "width": 1200,
        "height": 720,
        "resizable": true
      }
    ],
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "dmg",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "./binaries/process-wick",
      "./target/binaries/syftbox_client"
    ],
    "macOS": {
      "dmg": {
        "background": "./images/dmg-background.png",
        "windowPosition": {
          "x": 200,
          "y": 120
        },
        "windowSize": {
          "width": 800,
          "height": 400
        },
        "appPosition": {
          "x": 200,
          "y": 190
        },
        "applicationFolderPosition": {
          "x": 600,
          "y": 190
        }
      }
    }
  }
}
