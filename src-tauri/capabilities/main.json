{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main",
  "description": "enables the permissions for the 'main' window",
  "windows": ["main"],
  "permissions": [
    "dialog:default",
    "dialog:allow-open",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "http://*"
        },
        {
          "path": "https://*"
        }
      ]
    }
  ]
}
